@model IEnumerable<Payment.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="container my-5">
    <h2 class="mb-4 text-center fw-bold">üõçÔ∏è Our Products</h2>

    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-4 col-lg-3">
                    <div class="card h-100 shadow-sm border-0 rounded-3 product-card">
                        <div class="card-img-top d-flex align-items-center justify-content-center bg-light" style="height:220px;">
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <img src="@item.ImageUrl" alt="@item.Name" class="img-fluid rounded" style="max-height: 220px; object-fit: contain;" />
                            }
                            else
                            {
                                <span class="text-muted">No Image</span>
                            }
                        </div>

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold">@item.Name</h5>
                            <p class="card-text text-muted small">@item.Description</p>
                            <h6 class="fw-bold text-success mt-auto">@item.Price.ToString("C")</h6>
                        </div>

                        <div class="card-footer bg-white border-0 text-center">
                            <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                <input type="hidden" name="productId" value="@item.Id" />
                                <button type="submit" class="btn btn-success w-100 rounded-pill">
                                    <i class="bi bi-cart-plus me-1"></i> Add to Cart
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">No products available.</div>
    }
</div>

<style>
    .product-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0px 6px 20px rgba(0,0,0,0.1);
    }
    .card-title {
        font-size: 1.1rem;
        line-height: 1.3;
    }
    .card-text {
        min-height: 45px;
    }
</style>
